<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="AppFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="tint">@color/primaryTextColor</item>
    </style>

    <style name="ListSubtitle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/listSubtitle</item>
    </style>

    <style name="ListTitle">
        <item name="android:textColor">@color/listTitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TotalTitle">
        <item name="android:textColor">@color/listSubtitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NumberPadButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">@color/defaultForegroundColor</item>
        <item name="android:backgroundTint">@color/design_default_color_surface</item>
    </style>

</resources>
